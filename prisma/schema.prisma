generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider  = "postgresql"
  // url = "postgresql://webepex:WebEpex@777@45.147.96.122:5432/chat_app"
}

model User {
  id               String    @id @default(uuid())
  firstName        String
  lastName         String
  phone            String    @unique
  password         String
  lastLogin        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Profile and Chat Info
  username         String?   @unique
  gender           String?
  chatCount        Int       @default(50)
  pfpUrl           String?
  age              Int       @default(18)
  city             String?
  state            String?
  interests        String[]  // Array of strings for interests
  
  // Settings
  genderMatch      String    @default("random")
  
  // Social & Safety
  friends          Json?     // Stores array of {id, name, chat_id}
  giftsSent        Int[]
  totalGiftAmount  Int       @default(0)
  totalImageAmount Int       @default(0)
  reportCount      Int       @default(0)
  
  // Billing & Subscription
  billingDate     DateTime?
  planId          String?
  plan            Plan?     @relation(fields: [planId], references: [id])

  autopayEnabled  Boolean   @default(false)
  payuSubId       String?   // subscription id from PayU for autopay
  pendingPlanId   String?   @default("kjenjkeb3bd2rbr32ibr342r")
}

model RandomUser {
  id        String  @id @default(uuid()) @unique
  fullName  String
  userName  String
  pfpUrl    String
  age       Int
  gender    String
  city      String
}

model Plan {
  id              String   @id @default(uuid())
  name            String   @unique
  price           Float    // In Rupees (0, 99, 499)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Features
  editName        Boolean  @default(false)
  editPfp         Boolean  @default(false)
  sendEmojis      Boolean  @default(false)
  sendGifs        Boolean  @default(false)
  sendVideos      Boolean  @default(false) // Premium feature
  
  // Matching & Logic
  minMatchTime    Int      @default(60)    // Seconds (60-120 for Free, 0 for Premium)
  selectGender    Boolean  @default(false)
  chatTimer       Int      @default(30)    // In-chat countdown timer (30, 15, or 0 for none)
  
  // Limits
  maxDailyChats   Int      @default(20)    // 20, 50, or 9999 for unlimited
  maxFriendReq    Int      @default(0)     // 0, 15, or 50

  users           User[]
}

